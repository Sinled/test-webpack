@import "../../styles/variables.styl"
@import "../../styles/mixins.styl"
@import "../../styles/typography.styl"


.page
  min-height: 100%
  box-sizing: border-box
  padding-top: $base-padding * 4;
  padding-bottom: $base-padding * 2;
  position: relative
  display: flex

  &:before
    _parent-stretched()
    top: @padding-top
    bottom: @padding-bottom
    content: ''
    background: $second-background

.page__container
  _clearfix()
  max-width: $content-maw
  margin: 0 auto
  position: relative
  z-index: $z-index-lvl-1
  display: flex
  flex-direction: column


.columns
  display: flex
  flex: 1 0 auto

  @media screen and ({$bp-tablet-medium-end})
    display: block

.sidebar
  box-sizing: border-box
  flex: 0 0 auto
  width: 280px
  order: -1
  position: relative
  padding-right: $base-padding * 2
  padding-left: $base-padding * 4

  &:before
    content: ''
    background: $bd-color;
    position: absolute
    width: 2px
    top: $base-padding * 4
    bottom: $base-padding * 2
    left: @padding-left - @width / 2
    

.content
  background: $content-bg;
  padding: $base-padding * 2 $base-padding * 2  $base-padding * 2 $base-padding * 8 ;
  flex: 1 1 auto


.person
  _clearfix()
  padding: $base-padding * 2 $base-padding * 2 $base-padding * 2 $base-padding * 4


.person__avatar
  float: left
  margin-right: $base-padding * 8
  position: relative
  width: 200px

  &:after
    _parent-stretched()
    content: ''
    border: 4px solid $bd-color;
    z-index: $z-index-lvl-1;
    border-radius: 50%
    box-shadow: inset 0 0 1px 2px $second-background
    
  > img
    display: block
    border-radius: 50%
    width: 100%
    height: 0 a



.person__text-column
  overflow: hidden

.person__title
  _h1()
  margin: 0 0 $vertycal-rhythm-offset

.person__subtitle
  _sub-title()
  display: block

  .person__title > &
    padding-top: 10px
