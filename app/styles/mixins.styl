clearfix()
  &:after
    content: ''
    display: table
    clear: both


arrow($bg, $size, $direction = top)
  border: solid transparent
  content: ' '
  height: 0
  width: 0
  pointer-events: none
  border-color: rgba($bg, 0)
  border-width: $size

  if $direction == top
    border-bottom-color: $bg
    margin-left: - $size

  if $direction == bottom
    border-top-color: $bg
    margin-left: - $size

  if $direction == right
    border-left-color: $bg
    margin-top: - $size

  if $direction == left
    border-right-color: $bg
    margin-top: - $size


placeholder($params, $hideOnFocus = false, $duration = 0.5s)
  &::placeholder
    color: $params;

  @if $hideOnFocus
    &:focus
      &::placeholder
        opacity: 0;
        transition: opacity $duration $duration ease;


inline-block($position = middle)
  vertical-align: $position;
  display: inline-block;


button-reset()
  inline-block(middle)
  box-sizing: content-box
  outline: none
  border: none
  position: relative
  background: none
  overflow: visible
  padding: 0
  margin: 0
  color: $base-color
  cursor: pointer
  text-align: center
  text-decoration: none


button()
  button-reset()


text-input-defaults()
  text-input-transition()
  box-sizing: border-box
  margin: 0
  padding: 5px
  background: none
  border: none
  width: 100%
  display: block
  outline: none
  color: $base-color


input-text()
  overflow: hidden

  text-inputs()
    text-input-defaults()

  textarea
    width: 100% !important
    min-width: 100% !important
    min-height: 126px


flex-image()
  display: block
  height: auto


flex-image-container()
  > img
    display: block
    width: 100%
    height: auto


opacity-panel($color = $black, $opacity = .75)
  background: rgba($color, $opacity)


muted-element($opacity = .4)
  opacity: $opacity


no-last-margin($position = bottom)
  > *:last-child
    margin-$position: 0


centered($position = center, $additional-transforms = false)
  position: absolute

  if $position == center
    left: 50%
    top: 50%

    if $additional-transforms
      transform: translate(-50%, -50%) $additional-transforms
     else
      transform: translate(-50%, -50%)

  if $position == vertical
    top: 50%

    if $additional-transforms
      transform: translateY(-50%) $additional-transforms
     else
      transform: translateY(-50%)

  if $position == horizontal
    left: 50%

    if $additional-transforms
      transform: translateX(-50%) $additional-transforms
     else
      transform: translateX(-50%)


parent-stretched()
  position: absolute
  left: 0
  top: 0
  bottom: 0
  right: 0


increase-clickable-area()
  content: ''
  position: absolute
  left: - $click-additional-area-size
  right: - $click-additional-area-size
  bottom: - $click-additional-area-size
  top: - $click-additional-area-size


square-block-base()
  content: ''
  display: block


square-block()
  square-block-base()
  padding-top: 100%


empty-hidden()
  &:empty
    display: none



ellipsis()
  overflow: hidden
  text-overflow: ellipsis


cropped-text($display = false)
  ellipsis()
  white-space: nowrap

  if $display
    display: $display

