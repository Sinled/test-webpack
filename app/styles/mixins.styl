_clearfix()
  &:after
    content: ''
    display: table
    clear: both


_arrow($bg, $size, $direction = top)
  border: solid transparent
  content: ' '
  height: 0
  width: 0
  pointer-events: none
  border-color: rgba($bg, 0)
  border-width: $size

  if $direction == top
    border-bottom-color: $bg
    margin-left: - $size

  if $direction == bottom
    border-top-color: $bg
    margin-left: - $size

  if $direction == right
    border-left-color: $bg
    margin-top: - $size

  if $direction == left
    border-right-color: $bg
    margin-top: - $size


_placeholder($params, $hideOnFocus = false, $duration = 0.5s)
  &::placeholder
    color: $params

  @if $hideOnFocus
    &:focus
      &::placeholder
        opacity: 0
        transition: opacity $duration $duration ease


_inline-block($position = middle)
  vertical-align: $position
  display: inline-block


_button-reset()
  _inline-block(middle)
  box-sizing: content-box
  outline: none
  border: none
  position: relative
  background: none
  overflow: visible
  padding: 0
  margin: 0
  color: $base-color
  cursor: pointer
  text-align: center
  text-decoration: none


_button()
  _button-reset()


_text-input-defaults()
  text-input-transition()
  box-sizing: border-box
  margin: 0
  padding: 5px
  background: none
  border: none
  width: 100%
  display: block
  outline: none
  color: $base-color


_input-text()
  overflow: hidden

  input
    _text-input-defaults()

  textarea
    width: 100% !important
    min-width: 100% !important
    min-height: 126px


_flex-image()
  display: block
  height: auto


_flex-image-container()
  > img
    display: block
    width: 100%
    height: auto


_opacity-panel($color = $black, $opacity = .75)
  background: rgba($color, $opacity)


_muted-element($opacity = .4)
  opacity: $opacity


_no-last-margin($position = bottom)
  > *:last-child
    margin-$position: 0


_centered($position = center, $additional-transforms = false)
  position: absolute

  if $position == center
    left: 50%
    top: 50%

    if $additional-transforms
      transform: translate(-50%, -50%) $additional-transforms
     else
      transform: translate(-50%, -50%)

  if $position == vertical
    top: 50%

    if $additional-transforms
      transform: translateY(-50%) $additional-transforms
     else
      transform: translateY(-50%)

  if $position == horizontal
    left: 50%

    if $additional-transforms
      transform: translateX(-50%) $additional-transforms
     else
      transform: translateX(-50%)


_parent-stretched($t = 0, $r = 0, $b = 0, $l = 0)
  position: absolute
  top: $t
  right: $r
  bottom: $b
  left: $l


_increase-clickable-area($click-additional-area-size = 10px)
  content: ''
  position: absolute
  left: - $click-additional-area-size
  right: - $click-additional-area-size
  bottom: - $click-additional-area-size
  top: - $click-additional-area-size


_rectangle-block-base()
  content: ''
  display: block


_rectangle-block($ratio = 1)
  _rectangle-block-base()
  padding-top: $ratio * 100%


_empty-hidden()
  &:empty
    display: none


_ellipsis()
  overflow: hidden
  text-overflow: ellipsis


_cropped-text($display = false)
  _ellipsis()
  white-space: nowrap

  if $display
    display: $display

